{
  "metadata": [
    {
      "src": [
        {
          "src": "../src/",
          "files": [
            "**/*.csproj"
          ],
          "exclude": [
            "**/*.Sample/**",
            "**/*.Tests/**",
            "**/obj/**",
            "**/bin/**"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**/*.yml",
          "toc.yml",
          "getting-started.md"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "replace/**.md"
        ]
      }
    ],
    "globalMetadata": {
      "_appTitle": "Epos.Foundation Docs",
      "_enableSearch": false
    },
    "dest": "output/website",
    "fileMetadataFiles": [],
    "template": [
      "default",
      "modern"
    ],
    "noLangKeyword": false,
    "xref": [
      "https://learn.microsoft.com/en-us/dotnet/.xrefmap.json"
    ]
  }
}
